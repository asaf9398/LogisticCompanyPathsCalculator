<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.AddPointController" spacing="15"
      prefWidth="280" prefHeight="250"
      style="-fx-background-color: white; -fx-padding: 25; -fx-alignment: center;">

    <TextField fx:id="idField" promptText="Point ID" prefWidth="220" prefHeight="40"
               style="-fx-font-size: 14px; -fx-background-radius: 8;"/>

    <TextField fx:id="latField" promptText="Latitude (GEO)" prefWidth="220" prefHeight="40"
               style="-fx-font-size: 14px; -fx-background-radius: 8;"/>

    <TextField fx:id="lonField" promptText="Longitude (GEO)" prefWidth="220" prefHeight="40"
               style="-fx-font-size: 14px; -fx-background-radius: 8;"/>

    <Button text="Add" onAction="#handleAddPoint" prefWidth="220" prefHeight="50"
            style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #3498db;
                   -fx-text-fill: white; -fx-background-radius: 12;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);"/>

</VBox>
