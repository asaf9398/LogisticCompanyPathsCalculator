<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.MainViewController" spacing="15"
      prefWidth="250" prefHeight="180"
      style="-fx-background-color: white; -fx-padding: 25; -fx-alignment: center;">

    <Button text="Choose Map" onAction="#openMapSelection" prefWidth="200" prefHeight="55"
            style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #3498db;
                   -fx-text-fill: white; -fx-background-radius: 12;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);"/>

    <Button text="Maps Management" onAction="#openMapManagement" prefWidth="200" prefHeight="55"
            style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #3498db;
                   -fx-text-fill: white; -fx-background-radius: 12;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);"/>

</VBox>
